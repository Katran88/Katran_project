<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Katran.Styles">
    
    <Style x:Key="AuthReg_BorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Background" Value="#7B90A3" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Width" Value="420" />
        <Setter Property="Height" Value="480" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="InputField_TextBlockStyle" TargetType="TextBlock" >
        <Setter Property="FontFamily" Value="Rhodium Libre" />
        <Setter Property="FontSize" Value="24" />
    </Style>
    
</ResourceDictionary>