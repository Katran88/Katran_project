<Page x:Class="Katran.Pages.AuhtorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Katran.Pages"
      xmlns:uc="clr-namespace:Katran.UserControlls"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="AuhtorizationPage">

    <Grid>
        <Border Style="{DynamicResource ResourceKey=AuthReg_BorderStyle}">
            <StackPanel Orientation="Vertical"  >
                <Image Source="/Resources/KatranIcon.png" Margin="0,25,0,50" Width="150" />
                <uc:InputField FieldName="Login:" InputFieldWidth="290" Margin="10,5" />
                <uc:InputField FieldName="Password:" InputFieldWidth="250" Margin="10,5"  />
                <Button x:Name="SignInButton" Template="{StaticResource btTemplate}" Content="Sign In"
                        Height="45" Width="180"
                        Margin="0,40,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
