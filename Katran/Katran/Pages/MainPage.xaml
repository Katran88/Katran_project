<Page x:Class="Katran.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Katran.Pages" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:ViewModels="clr-namespace:Katran.ViewModels" xmlns:usercontrolls="clr-namespace:Katran.UserControlls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.DataContext>
        <ViewModels:MainPageViewModel />
    </Page.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        
        <Expander Grid.Column="0" ExpandDirection="left" HorizontalAlignment="Left" Panel.ZIndex="1" Foreground="{DynamicResource TextColor}" >
            <Expander.Header >
                <TextBlock Text="{DynamicResource ResourceKey=l_Menu}" Style="{DynamicResource ResourceKey=MediumTextStyle}" >
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" >

                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Margin="4"  Command="{Binding ContactsSelected}" >
                        <materialDesign:PackIcon Kind="AccountGroup" ToolTip="{DynamicResource ResourceKey=l_ToolTipContacts}" Height="25" Width="25" Foreground="{DynamicResource TextColor}" />
                    </RadioButton>

                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Vertical" Visibility="{Binding ContactsAndChatsTabVisibility}" >
                    <usercontrolls:ContactsSearcher SearchFieldText="{Binding SearchTextField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    SearchButtonBind="{Binding ContactsSearchButton}" />
                    <ListView ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedContact}" 
                              ItemContainerStyle="{StaticResource ListViewItemStyle}" />
                    <usercontrolls:ContactsBorder Visibility="{Binding ContactsBorderVisibility}"
                                                  SearchOutContactsBind="{Binding SearchOutContacts}" />
                    <ListView ItemsSource="{Binding FilteredNoUserContacts}"
                              Visibility="{Binding NoUserContactsVisibility}"
                              ItemContainerStyle="{StaticResource ListViewItemStyle}" />
                </StackPanel>
                
            </Grid>
            
        </Expander>

        <StackPanel Grid.Column="1" Orientation="Vertical" >

            <ContentPresenter Grid.Row="1" x:Name="messages" Content="{Binding MessagesContentPresenter}" />
            
            <Grid Margin="20,5,20,5" >
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0"
                         Foreground="{DynamicResource TextColor}"
                         Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                         VerticalAlignment="Bottom" AcceptsReturn="True"
                         TextWrapping="Wrap" MaxHeight="200"
                         VerticalScrollBarVisibility="Auto"                                           
                         materialDesign:HintAssist.Hint="{DynamicResource ResourceKey=l_YourMessage}" />

                <Button Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,5,0"
                        Template="{DynamicResource ResourceKey=btTemplateWithoutBorder}" >
                    <materialDesign:PackIcon Kind="Send" VerticalAlignment="Center" Height="20" Width="20" />
                </Button>
                
            </Grid>
            
        </StackPanel>
            
    </Grid>
</Page>
